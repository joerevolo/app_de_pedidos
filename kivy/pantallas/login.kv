<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: info
            text: 'Regístrate o inicia sesión'

        TextInput:
            id: usuario
            hint_text: 'Usuario'
            multiline: False

        TextInput:
            id: clave
            hint_text: 'Contraseña'
            password: True
            multiline: False

        AnchorLayout:
            anchor_x: 'center'
            Button:
                id: boton_registrar
                text: 'Registrar'
                size_hint: None, None
                size: 120, 40

        AnchorLayout:
            anchor_x: 'center'
            Button:
                id: boton_login
                text: 'Iniciar Sesión'
                size_hint: None, None
                size: 120, 40

        Label:
            id: mensaje
            text: ''